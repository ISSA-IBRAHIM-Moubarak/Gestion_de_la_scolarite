{% extends 'layout_main.html.twig' %}
{% block title %}Nouvel Apprenant
{% endblock %}
{% block content %}
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Nouvelle Apprenant</h1>
					{% if classe is defined %}
						<div class="{{classe}}">{{resultat}}</div>
					{% endif %}
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="#">Accueil</a>
						</li>
						<li class="breadcrumb-item active">Nouvelle Apprenant</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">

					<div class="card">
						<div class="card-header">
							{% if action == 'create' %}
								<h2 class="card-title">Nouvelle Apprenant</h2>
							{% endif %}
							{% if action == 'edit' %}
								<h2 class="card-title">Modifier la Apprenant[{{ apprenant.NomApprenant }}]</h2>
							{% endif %}
						</div>
						<!-- /.card-header -->
						<div class="card-body">

							{{ form_start(form, {'attr': {'id': 'field_form'}}) }}
							{{ form_errors(form) }}
							<div class="card-body">
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.NomApprenant, "Nom Apprenant", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.NomApprenant, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.NomApprenant) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.PrenomApprenant, "Prenom Apprenant", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.PrenomApprenant, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.PrenomApprenant) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.DateNaissance, "Date de Naissance", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.DateNaissance, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.DateNaissance) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.LieuNaissance, "Lieu de Naissance", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.LieuNaissance, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.LieuNaissance) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.Nationalite, "Nationalite", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.Nationalite, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.Nationalite) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.Genre, "Genre", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.Genre, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.Genre) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.Contact, "Contact", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.Contact, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.Contact) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.Email, "Email", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.Email, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.Email) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.Adresse, "Adresse", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.Adresse, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.Adresse) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.SituationMatrimoniale, "Situation-Matrimoniale", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.SituationMatrimoniale, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.SituationMatrimoniale) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											{{ form_label(form.file, "Photo de l'apprenant", {'label_attr': {'class': 'form-label'}}) }}
											{{ form_widget(form.file, {'attr': {'class': 'form-control' } }) }}
											{{ form_errors(form.file) }}
										</div>
									</div>
								</div>

							</div>

							<div class="row">
								<div class="col-md-4"></div>
								<div class="col-md-4">

									<div class="col-md-4"></div>
								</div>
								<div class="card-footer">
									<button type="submit" class="btn btn-sm btn-success float-right">
										<i class="fa fa-save"></i>
										Sauvegarder</button>
									{{ form_rest(form) }}
									{{ form_end(form) }}
									<button type="button" class="btn btn-sm btn-default float-right mr-1 back" onclick='location.href="{{ path('list_apprenant') }}"'>
										<i class="fa fa-ban"></i>Annuler</button>

								</div>


							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->
					</div>
					<!-- /.col -->
					<!-- /.row -->
				</div>
				<!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->


		<!-- Control Sidebar -->
		<aside
			class="control-sidebar control-sidebar-dark"><!-- Control sidebar content goes here -->
		</aside>
		<!-- /.control-sidebar -->
	</div>
	<!-- ./wrapper -->


{% endblock %}
{% block autresFichiersJs %}
	<!-- jQuery -->
	<script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
	<!-- Bootstrap 4 -->
	<script src="{{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	<!-- AdminLTE App -->
	<script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
	<!-- AdminLTE for demo purposes -->
	<script src="{{ asset('dist/js/demo.js') }}"></script>
	<!-- Summernote -->
	<script src="{{ asset('plugins/summernote/summernote-bs4.min.js') }}"></script>
	<script>
		$(function () { // Summernote
$('.textarea').summernote()
})
	</script>


{% endblock %}

